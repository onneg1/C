#include <iostream>
#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main()
{
    setlocale (LC_ALL, "portuguese");
    
    int n;
  
    printf ("Digite um número inteiro: \n");
    scanf ("%d", &n);
    
    if (n % 2 == 0){
        printf ("%d é um número par.", n);
    }
    else {
        printf ("%d é um número ímpar.", n);
    }

    return 0;
}
